# Application
NODE_ENV=development
PORT=4000
APP_URL=http://localhost:3000

# Database (OLTP - Operational)
DATABASE_URL=postgresql://user:password@localhost:5432/iceberg_prod
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=iceberg_prod

# Database (OLAP - Analytics)
ANALYTICS_DATABASE_URL=postgresql://user:password@localhost:5432/iceberg_analytics_prod
ANALYTICS_DB_HOST=localhost
ANALYTICS_DB_PORT=5432
ANALYTICS_DB_USERNAME=postgres
ANALYTICS_DB_PASSWORD=postgres
ANALYTICS_DB_DATABASE=iceberg_analytics_prod

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Shopify OAuth
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_orders,read_customers,read_products,read_checkouts

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d

# Encryption (for access tokens)
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# Klaviyo
KLAVIYO_API_KEY=your_klaviyo_api_key

# Sentry
SENTRY_DSN=your_sentry_dsn_here

# Logging
LOG_LEVEL=info
